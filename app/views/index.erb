<nav class="navbar navbar-default navbar-static-top">
  <div class="container">
    <a class="navbar-brand bigger-robot-font" href="/">(little) Robot World</a>
    <ul class="nav navbar-nav navbar-right robot-font">
      <li><a href="/robots">All the Robots</a></li>
      <li><a href="/robots/new">New Robot(a)</a></li>
    </ul>
  </div>
</nav>

<% @robots.each do |robot| %>
  <div class="col-md-6 well">
    <div class = "row">
      <div class = "col-md-6">
        <img src="<%= robot.avatar %>" class="img-responsive">
      </div>
      <div class = "col-md-6">
        <p class = "robot-font-med">
          ID: <%= robot.id.to_s.rjust(6,'0') %><br>
          Birthdate: <%= robot.birthdate.strftime("%b %d, %Y")%><br>
          <%= robot.city %>, <%= robot.state %><br>
          <br>
          Department: <%= robot.department %><br>
          Date Hired: <%= robot.date_hired.strftime("%b %d, %Y")%>
        </p>
        <br>
      </div>
    </div>
    <div class = "row">
      <div class = "col-md-6 text-center">
        <h3 class = "robot-font-bold"><%= robot.name %> </h3>
      </div>
      <div class = "col-md-6 centered">
        <button type="button" class="btn btn-primary">Edit</button>
        <button type="button" class="btn btn-danger">Delete</button>
      </div>
    </div>
  </div>
<% end %>
